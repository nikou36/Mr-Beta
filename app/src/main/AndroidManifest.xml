<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maesrecipebeta">

    <application
        android:name=".controllers.AmplifyController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaesRecipeBeta.NoActionBar">
        <activity android:name=".activities.SimpleLoginActivity"></activity>
        <activity android:name=".activities.RegisterActivity" />
        <activity
            android:name=".activities.ui.login.CustomLoginActivity"
            android:label="@string/title_activity_custom_login" />
        <activity android:name=".activities.RecipeDisplayActivity" />
        <activity android:name=".activities.DisplaySpoonacularRecipesActivity" />
        <activity android:name=".activities.PostMLScanActivity" />
        <activity android:name=".activities.PreUploadActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>